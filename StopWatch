<script type="text/javascript">
		var l;
		var i=0,j=0;
		var count=0;
		function start(){
		l=setInterval(segment,1000);
		}
		function STOP(){
			clearInterval(l);
			$(document).ready(function() {
				$(".segment").css({"background-color":"red","box-shadow": "0px 0px 25px #990000"});
			});
		}
		function RESTART(){
			l=setInterval(segment,1000);
		}
		function segment()
        {		  
		  
		  i=count%10; j=(count/10)-(count%10);
		  $(document).ready(function() {
		  $("#A1").css({"visibility":"visible"});
